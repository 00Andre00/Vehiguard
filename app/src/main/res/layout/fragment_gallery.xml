<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Titulo -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registra tus gastos"
        android:textSize="18sp"
        android:paddingBottom="16dp" />

    <!-- Gasolina -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gasolina"
            android:layout_marginEnd="8dp"
            android:gravity="start"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextGasolina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Monto"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <!-- Mantenimiento -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mantenimiento"
            android:layout_marginEnd="8dp"
            android:gravity="start"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextMantenimiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Monto"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <!-- Otros gastos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otros gastos"
            android:layout_marginEnd="8dp"
            android:gravity="start"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextOtros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Monto"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <!-- BotÃ³n para agregar el gasto -->
    <Button
        android:id="@+id/btnAgregarGasto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar gasto"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

</LinearLayout>
